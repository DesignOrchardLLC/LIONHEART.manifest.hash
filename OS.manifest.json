{
  "manifest": {
    "name": "manifest.json",
    "system": "DrMarchand’s ∞ OS™ — Lionheart℠",
    "version": "v1.1.0",
    "status": "LOCKED",
    "owner": "Design Orchard LLC",
    "author": "Joseph Kyle Marchand",
    "date": "2026-02-22",
    "repository": "DesignOrchardLLC/lionheart_manifest",
    "branch": "main"
  },
  "canonical_artifacts": [
    {
      "path": "README.md",
      "role": "Repository Overview",
      "required": true,
      "sha256": "{{SHA256_README}}"
    },
    {
      "path": "LIONHEART_v1.1.0.md",
      "role": "Canonical System Hierarchy",
      "required": true,
      "sha256": "{{SHA256_CHARTER}}"
    },
    {
      "path": "lionheart_schema.json",
      "role": "Neuro-Forge Schema",
      "required": true,
      "sha256": "{{SHA256_SCHEMA}}"
    },
    {
      "path": "artifacts/witness_template.json",
      "role": "Host Witness Template",
      "required": true,
      "sha256": "{{SHA256_WITNESS_TEMPLATE}}"
    },
    {
      "path": ".github/workflows/lionheart-verify.yml",
      "role": "Verification Workflow",
      "required": false,
      "sha256": "{{SHA256_WORKFLOW}}"
    },
    {
      "path": "LICENSE",
      "role": "Proprietary License",
      "required": true,
      "sha256": "{{SHA256_LICENSE}}"
    }
  ],
  "rules": {
    "order_of_trust": [
      "Design Orchard LLC declares canonical intent",
      "DrMarchand’s Laboratory validates and appends witness",
      "DrMarchand’s Library verifies integrity",
      "Vault preserves cryptographic material"
    ],
    "promotion_flow": [
      "Experimental",
      "Validated",
      "Archived",
      "Preserved"
    ],
    "no_silent_retention": true,
    "version_lock_required": true,
    "hash_regeneration_required_on_change": true
  }
}